@model  Amana.ViewModels.MixDesigns.MdLabGradSettingViewModel
@using HtmlHelpers.BeginCollectionItem;
@using Amana.Models.Utilities;

@{
    Layout = null;

}

@using (Html.BeginCollectionItem("ListGradSettings"))
{
    @Html.HiddenFor(model => model.GradSettingItemId)
    @Html.HiddenFor(model => model.RequestId)
    @Html.HiddenFor(model => model.MinLimit)
    @Html.HiddenFor(model => model.MaxLimit)


    <tr>
        <td>@Model.Sizemm</td>
        <td>@Model.SizeInch</td>
        <td>
            @Html.EditorFor(model => model.MassRetainedVal1_Input, new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal1_1)
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal1_2)
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal1_3)
        </td>
        <td>
            @Html.EditorFor(model => model.MassRetainedVal2_Input, new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal2_1)
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal2_2)
        </td>
        <td>
            @Html.DisplayFor(model => model.MassRetainedVal2_3)
        </td>
        <td>
            @Html.DisplayFor(model => model.PerentPassing1A)
        </td>
        <td>
            @Html.DisplayFor(model => model.PerentPassing1B)
        </td>
        <td>
            @Html.DisplayFor(model => model.PerentPassingBlended)
        </td>
        <td>
            @Html.DisplayFor(model => model.MinLimit)
        </td>
        <td>
            @Html.DisplayFor(model => model.MaxLimit)
        </td>
        <td>
            @if (Model.IsPass.HasValue)
            {
                if (Model.IsPass == true)
                {
                    <text>Pass</text>
                }
                else
                {

                    <text>Fail</text>
                }

            }
            else
            {
                <text> - </text>
            }
        </td>
    </tr>

}