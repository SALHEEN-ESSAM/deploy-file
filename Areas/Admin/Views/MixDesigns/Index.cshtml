@model  List<Amana.Models.Entities.MD_Requests>
@using Amana.Models.Utilities;
@using Amana.Models.Helpers;
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    //startDate=DateTime.Now
    var currentUser = (Amana.Models.Entities.C_UserItems)HttpContext.Current.Session["UserDetails"];

    var status = string.IsNullOrEmpty(Request["status"]) ? "" : Request["status"];
    string startDate = string.IsNullOrEmpty(Request["startDate"]) ? "" : Request["startDate"].ToString();
    string endDate = string.IsNullOrEmpty(Request["endDate"]) ? "" : Request["endDate"].ToString();
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.MixDesigns
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    قائمة
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"> @Cpanel.MixApprovalRequest</span>

        </div>
    </div>
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>

            <h3 class="kt-portlet__head-title">
                @Cpanel.MixApprovalRequest
            </h3>

        </div>
        @*<div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <a href="@Url.Action("Create")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>
                    </div>
                </div>
            </div>*@
    </div>

    <div class="kt-portlet__body">
        @if (ViewBag.Success == true)
        {
            @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
        }
        <!--begin: Search Form -->
        @using (Html.BeginForm("Index", "MixDesigns", FormMethod.Get, new { @class = "kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10" }))
        {
            <div class="row align-items-center">
                <div class="col-xl-12 order-2 order-xl-1">
                    <div class="row align-items-center">
                        @*<div class="col-md-1 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__control">
                                    <label>رقم العينة</label>
                                    <input id="sampleId" name="sampleId" type="text" class="form-control" />
                                </div>
                            </div>*@
                        <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.FactoryName</label>
                                @Html.DropDownList("factoryId", ViewData["FactoriesLst"] as SelectList, @Cpanel.ChooseOption, new { @class = "form-control select2control" })
                            </div>
                        </div>

                        <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.Status </label>
                                @Html.DropDownList("status", new List<SelectListItem>
                                {
                                    new SelectListItem{ Text= "-- الكل --", Value = "" , Selected= (status=="") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum0 , Value = "0" , Selected= (status=="0") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum1, Value = "1" , Selected= (status=="1") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum2, Value = "2", Selected= (status=="2") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum3, Value = "3", Selected= (status=="3") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum4, Value = "4", Selected= (status=="4") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum5, Value = "5", Selected= (status=="5") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum6, Value = "6", Selected= (status=="6") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum7, Value = "7", Selected= (status=="7") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum8, Value = "8", Selected= (status=="8") },
                                    new SelectListItem{ Text= Cpanel.MixDesignStatusEnum9, Value = "9", Selected= (status=="9") },

                           }, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.From</label>
                                <input id="startDate" name="startDate" type="text" class="form-control kt_datepicker_1" value="@startDate" />
                            </div>
                        </div>
                        <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.To</label>
                                <input id="endDate" name="endDate" type="text" class="form-control kt_datepicker_1" value="@endDate" />
                            </div>
                        </div>

                        <div class="col-md-1">
                            <input type="submit" value="@Amana.GlobalResources.Cpanel.Search" class="btn btn-default kt-mt-20" />
                        </div>

                    </div>
                </div>

            </div>

        }

        <!--end: Search Form -->
        <!--begin: Datatable -->
        @if (Model.Count > 0)
        {
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        @*<th>رقم العينة</th>*@
                        <th>@Cpanel.RequestDate</th>
                        <th>@Cpanel.FactoryName</th>
                        <th>@Cpanel.Status </th>
                        <th>
                            @Cpanel.Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                @*<td>
                                        @item.SampleId
                                    </td>*@
                                <td>
                                    @item.CreatedWhen.ToString("dd / MM / yyyy")
                                </td>
                                <td>
                                    @item.Factories.Name
                                </td>
                                <td>
                                    @Html.Raw(Html.MixDesignStatusBadge(item.RequestStatus))
                                </td>
                                <td nowrap>
                                    <a href="@Url.Action("CreateRequestConcClsInfo",new {id= item.RequestId})" class="btn btn-success btn-sm mr-2">
                                        @Cpanel.RequestInfo
                                    </a>
                                    <a href="@Url.Action("ResultConcClsInfo","MixDesignsLab",new {id= item.RequestId})" class="btn btn-warning btn-sm mr-2">
                                        @Cpanel.LabResults
                                    </a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

            <!--end: Datatable -->
        }
        else
        {
            <p>@Cpanel.NoData</p>
        }
    </div>
</div>

@section sectionScripts{



    
}





