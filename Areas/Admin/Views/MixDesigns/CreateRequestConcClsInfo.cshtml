@model Amana.ViewModels.MixDesigns.MdRequestConcClsInfoViewModel
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";

    Amana.Models.Entities.MD_Requests requestItem = (Amana.Models.Entities.MD_Requests)ViewBag.RequestItem;
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.MixDesigns
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"> @Cpanel.MixApprovalRequest</span>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
               @Cpanel.ConcreteClass : @Model.ConcClsId
            </span>

        </div>
    </div>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding:0px;">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        @if (requestItem != null)
        {

            <div class="col-md-4">
                @Html.Partial("_RequestSideMenu", requestItem);
            </div>

        }

    <div class="col-md-8">

        <div class="row">
            <div class="col-lg-12">
                <!--begin::Portlet-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">
                                @Cpanel.ConcreteClass : @Model.ConcClsId

                            </h3>
                        </div>
                    </div>


                    <!--begin::Form-->
                    <div class="kt-portlet__body" style="direction:ltr;text-align:left">
                        @if (ViewBag.Success == true)
                        {
                            @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                        }

                        @if (Model.CompressiveStrength28DaysAvg.HasValue)
                        {
                            if ((Model.CompressiveStrength28DaysAvg - Model.ConcClsId) < 5)
                            {
                                @Html.Partial("~/Areas/Admin/Views/Shared/UcCustomError.cshtml","Compressive strength must be greater than "+(Model.ConcClsId+5).ToString())
                            }
                        }
                        @using (Html.BeginForm("CreateRequestConcClsInfo", "MixDesigns", new { id = Model.RequestId, cls = Model.ConcClsId }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ItemId)
                            @Html.HiddenFor(model => model.RequestId)
                            @Html.HiddenFor(model => model.ConcClsId)

                            <div class="kt-portlet__body">
                                <div class="kt-section kt-section--first">

                                    <h3 class="kt-section__title">
                                        1.   Design MIX :
                                    </h3>
                                    <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                                        <thead>
                                            <tr>
                                                <th>Materials</th>
                                                <th>Uncorrected Batch Weight</th>
                                                <th>Corrected Batch Weight </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ListConClsMaterials)
                                            {
                                                Html.RenderPartial("_ConClsInfoMaterial", item);
                                            }

                                        </tbody>
                                    </table>

                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

                                </div>
                                <div class="kt-section kt-section--first">

                                    <h3 class="kt-section__title">
                                        2.   LABORATORY TRIAL MIX RESULTS :
                                    </h3>
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.AmbTemp, "Amb. Temperature")
                                            @Html.EditorFor(model => model.AmbTemp, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmbTemp, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.MixTemp, "Mix Temperature	")
                                            @Html.EditorFor(model => model.MixTemp, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MixTemp, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.Density, "Density")
                                            @Html.EditorFor(model => model.Density, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Density, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.Yield, "Yield")
                                            @Html.EditorFor(model => model.Yield, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Yield, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.AirContent, "Air Content")
                                            @Html.EditorFor(model => model.AirContent, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AirContent, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-6">

                                        </div>
                                    </div>
                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.SlumbInitial, "Slumb @ Initial")
                                            @Html.EditorFor(model => model.SlumbInitial, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SlumbInitial, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.Slumb30Min, "Slumb @ 30 Min")
                                            @Html.EditorFor(model => model.Slumb30Min, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Slumb30Min, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.Slumb60Min, "Slumb @ 60 Min")
                                            @Html.EditorFor(model => model.Slumb60Min, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Slumb60Min, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.LabelFor(model => model.Slumb90Min, "Slumb @ 90 Min")
                                            @Html.EditorFor(model => model.Slumb90Min, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Slumb90Min, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                    <div class="form-group row">
                                        <div class="col-lg-4">
                                            @Html.LabelFor(model => model.CompressiveStrength28Days1, "Compressive Strength 7 Days")
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength7Days1, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength7Days1, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength7Days2, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength7Days2, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength7Days3, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength7Days3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @if (Model.CompressiveStrength7DaysAvg.HasValue)
                                            {
                                                <span class="badge badge-info">@Model.CompressiveStrength7DaysAvg</span>

                                            }
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-4">
                                            @Html.LabelFor(model => model.CompressiveStrength28Days1, "Compressive Strength 28 Days")
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength28Days1, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength28Days1, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength28Days2, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength28Days2, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @Html.EditorFor(model => model.CompressiveStrength28Days3, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompressiveStrength28Days3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-2">
                                            @if (Model.CompressiveStrength28DaysAvg.HasValue)
                                            {
                                                <span class="badge badge-info">@Model.CompressiveStrength28DaysAvg</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

                                    <div class="form-group row">
                                        <div class="col-lg-4">
                                            @Html.LabelFor(model => model.Standard, "Standard")
                                            @Html.EditorFor(model => model.Standard, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Standard, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-4">
                                            @Html.LabelFor(model => model.TestSpecimen, "Test Specimen")
                                            @Html.EditorFor(model => model.TestSpecimen, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TestSpecimen, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-lg-4">
                                            @Html.LabelFor(model => model.Remarks, "Remarks")
                                            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @*<div class="kt-checkbox-list">
                        @foreach (var item in Model.ListPropLocation)
                        {
                            Html.RenderPartial("_ClsProperty", item);
                        }

                    </div>*@
                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

                                </div>

                                @*<div class="form-group row">
                    <div class="col-lg-6">
                        <label>
                            اسم المصنع
                            :
                        </label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="col-lg-6">
                        <label>
                            كود المصنع
                            :
                        </label>
                        @Html.EditorFor(model => model.CodeNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CodeNo)
                    </div>
                </div>*@


                            </div>
                            <div class="kt-portlet__foot">
                                <div class="kt-form__actions">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                                        </div>
                                        @*<div class="col-lg-6 kt-align-right">
                            <button type="reset" class="btn btn-danger">Delete</button>
                        </div>*@
                                    </div>
                                </div>
                            </div>

                        }


                    </div>


                    <!--end::Form-->
                </div>


            </div>
        </div>
    </div>


        </div>

        <!--End::App-->
    </div>
@section sectionScripts{
    <script>
        $(document).ready(function () {
            $("#lnkReqConcCls@(Model.ConcClsId)").addClass("kt-widget__item--active");
        });
       
    </script>
}





