@model List<Amana.Models.Entities.FactoryWarnings>
@using Amana.Models;
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    var user = (Amana.Models.Entities.C_UserItems)HttpContext.Current.Session["UserDetails"];

}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Warnings
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">  @Cpanel.NewWarnings</span>

        </div>
    </div>
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Cpanel.NewWarnings
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @*<a  href="@Url.Action("AddLaw")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>*@
                </div>
            </div>
        </div>
    </div>

    <div class="kt-portlet__body">
        @if (ViewBag.Success == true)
        {
            @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
        }
        <!--begin: Datatable -->
        @if (Model.Count > 0)
        {
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>@Cpanel.Date</th>
                        <th>@Cpanel.FactoryName</th>
                        <th>@Cpanel.Type</th>
                        <th>@Cpanel.Violations</th>
                        <th></th>
                        <th>
                            
                            @Cpanel.Actions
                        </th>
                        <th>
                            @Cpanel.Approvals
                        </th>
                        @if (user.UserId == AppSettings.GeneralManagerId || user.UserId == AppSettings.ProjectSupervisorId || user.UserId == AppSettings.ProjectManagerId)
                        {
                            <th>
                                @Cpanel.Approve
                            </th>
                        }
                        <th>
                            @Cpanel.Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                @Html.Partial("~/Areas/Admin/Views/Warnings/_VolationsText.cshtml", item)

                                <td>
                                    @if (item.DeserveCloseFactory == true)
                                    {
                                        <span class="btn btn-sm btn-label-danger" style="margin: 2px;">يجب إغلاق المصنع</span>
                                    }
                                    @if (item.DeserveIntensiveVisits == true)
                                    {
                                        <span class="btn btn-sm btn-label-warning" style="margin: 2px;">يجب تطبيق المراقبة المكثفة</span>
                                    }

                                </td>

                                <td>
                                    @if (item.IsProjectManagerApproved)
                                    {
                                        <span class="badge badge-success mb-1"><i class="fa fa-check"></i> مدير المشروع</span>

                                    }
                                    @if (item.IsProjectSupervisorApproved)
                                    {
                                        <span class="badge badge-success mb-1"><i class="fa fa-check"></i> مشرف المشروع</span>
                                    }
                                    @if (item.IsGeneralManagerApproved)
                                    {
                                        <span class="badge badge-success mb-1"><i class="fa fa-check"></i> مدير إدارة المواد والبحوث </span>
                                    }
                                </td>
                                @if (user.UserId == AppSettings.GeneralManagerId || user.UserId == AppSettings.ProjectSupervisorId || user.UserId == AppSettings.ProjectManagerId)
                                {
                                    <td nowrap>
                                        @*<a href="@Url.Action("ApproveWarning", new { id = item.WarningId })" onclick="return confirm('سيتم ارسال الإنذار للمصنع و تطبيق الإجراءات المستحقة, هل أنت متاكد ؟');" class="btn btn-success btn-sm mr-2">
                                                تطبيق الإنذار
                                            </a>*@

                                        <a href="@Url.Action("ApproveWarning", new { id = item.WarningId })" onclick="return confirm('سيتم الموافقة على الإنذار, هل أنت متاكد ؟');" class="btn btn-success btn-sm mr-2">
                                            @Cpanel.Approve
                                        </a>

                                    </td>
                                }
                                <td nowrap>
                                    <a href="@Url.Action("WarningDetails", new { id = item.WarningId })" class="btn btn-primary btn-sm mr-2">
                                        التفاصيل
                                    </a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

            <!--end: Datatable -->
        }
    </div>
</div>

@section sectionScripts{


    <script>


        $(document).ready(function () {


            $("#liManagement").addClass("kt-menu__item--open");
            $("#liWarnings").addClass("kt-menu__item--open");

        });
    </script>



}





