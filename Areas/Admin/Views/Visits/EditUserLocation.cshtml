@model Amana.ViewModels.VisitsAndSamples.UserLocationViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            الزيارت
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    @ctgry.SuperCategoryName
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"> تعديل موقع مراقب</span>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        تعديل موقع مراقب
                    </h3>
                </div>
            </div>

            <!--begin::Form-->

            @using (Html.BeginForm("EditUserLocation", "Visits", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.UserID)
                @Html.HiddenFor(model => model.DayDate)


                <div class="kt-portlet__body">
                    @if (ViewBag.Success == true)
                    {
                        @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                    }

                    @if (ViewBag.CustomError != null)
                    {
                        @Html.Partial("~/Areas/Admin/Views/Shared/UcCustomError.cshtml", ViewBag.CustomError as string)
                    }
                    <div class="form-group row">
                        <label class="col-md-2">
                            المراقب :
                        </label>
                        <div class="col-md-6">

                            @Model.UserName
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2">
                            التاريخ : 
                        </label>
                        <div class="col-md-6">

                            @Model.DayDate.ToString("dd / MM / yyyy")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2">
                            الموقع : 
                        </label>
                        <div class="col-md-6">

                            
                            @Html.DropDownListFor(model => model.LocationId, ViewData["LocationsLst"] as SelectList, @Amana.GlobalResources.Cpanel.ChooseOption, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.LocationId)

                        </div>

                    </div>


                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />
                                @Html.ActionLink(@Amana.GlobalResources.Cpanel.BackToList, "UsersLocations", new { }, new { @class = "btn btn-secondary" })

                            </div>
                            @*<div class="col-lg-6 kt-align-right">
                            <button type="reset" class="btn btn-danger">Delete</button>
                        </div>*@
                        </div>
                    </div>
                </div>

            }


            <!--end::Form-->
        </div>


    </div>
</div>
<script>
    $("#liVisits").addClass("kt-menu__item--open");
</script>



