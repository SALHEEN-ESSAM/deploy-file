@model Amana.Models.Entities.AutoGeneratedVisits
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    bool CreateMonthlyVisits = ViewBag.CreateMonthlyVisits;
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Visits
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    @ctgry.SuperCategoryName
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">@Cpanel.CreateMonthVisits</span>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        @Cpanel.CreateMonthVisits
                    </h3>
                </div>
            </div>

            <!--begin::Form-->

            @using (Html.BeginForm("CreateMonthly", "Visits", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.MonthId)
                @Html.HiddenFor(model => model.YearId)


                <div class="kt-portlet__body">
                    @if (ViewBag.Success == true)
                    {
                        @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                    }

                    <div class="form-group row">
                        <div class="col-lg-6">
                            <h4>
                               @Cpanel.MonthName : @Model.MonthId / @Model.YearId
                            </h4>

                        </div>
                    </div>

                    @if (CreateMonthlyVisits == false && ViewBag.Success == null)
                    {
                        <div class="form-group row">
                            <div class="kt-alert kt-alert--outline alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                                <span> @Cpanel.VisitsAlreadyCreated</span>
                            </div>
                        </div>
                    }
                    @if (CreateMonthlyVisits == true)
                    {

                        <div class="form-group row">
                            <div class="col-lg-6">
                                @Html.LabelFor(model => model.MaxLocationVisitsInDay, Cpanel.LocationMaxDailyVisits)

                                @Html.TextBoxFor(model => model.MaxLocationVisitsInDay, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaxLocationVisitsInDay, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                @Html.LabelFor(model => model.MaxVisitsInMonth, Cpanel.MonthlyMaximumVisits)

                                @Html.TextBoxFor(model => model.MaxVisitsInMonth, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaxVisitsInMonth, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input type="submit" value="@Cpanel.Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    }

                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-6">


                                @Html.ActionLink(@Amana.GlobalResources.Cpanel.BackToList, "Index", new { }, new { @class = "btn btn-secondary" })

                            </div>
                            @*<div class="col-lg-6 kt-align-right">
                                    <button type="reset" class="btn btn-danger">Delete</button>
                                </div>*@
                        </div>
                    </div>
                </div>

            }


            <!--end::Form-->
        </div>


    </div>
</div>
<script>
    $("#liVisits").addClass("kt-menu__item--open");
</script>


