@model PagedList.IPagedList<Amana.Models.Entities.C_CategoryVocabularies>
@using PagedList.Mvc;

@{
    Layout = "_Layout.cshtml";
}


@if (Model.Count > 0)
{
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Amana.GlobalResources.Cpanel.CatVocabularies
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">

                        <a href="@Url.Action("Create")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="kt-portlet__body">

            <!--begin: Datatable -->

            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>@Amana.GlobalResources.Cpanel.Title</th>
                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td nowrap>
                                    <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="View">
                                        <i class="la la-edit"></i>
                                    </a>
                                    @Html.ActionLink(@Amana.GlobalResources.Cpanel.Categories, "Index", "C_Categories", new { id = item.CatVocId }, null) |
                                    @Html.ActionLink(@Amana.GlobalResources.Cpanel.Edit, "Create", new { id = item.CatVocId }) |
                                    @Html.ActionLink(@Amana.GlobalResources.Cpanel.Delete, "Delete", new { id = item.CatVocId })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

            <!--end: Datatable -->
        </div>
    </div>


}

@section sectionScripts{
   

    
}