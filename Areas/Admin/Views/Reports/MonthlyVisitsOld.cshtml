@model List<Amana.ViewModels.VisitsAndSamples.FactoryVisitsReport>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    var month = string.IsNullOrEmpty(Request["month"]) ? DateTime.Now.Month.ToString() : Request["month"];
    var year = string.IsNullOrEmpty(Request["year"]) ? DateTime.Now.Year.ToString() : Request["year"];
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            الزيارات
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    قائمة
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">التقرير الشهري</span>

        </div>
    </div>
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>

            <h3 class="kt-portlet__head-title">
                التقرير الشهري
            </h3>

        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @*<a  href="@Url.Action("AddFactory")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>*@
                </div>
            </div>
        </div>
    </div>

    <div class="kt-portlet__body">
        @if (ViewBag.Success == true)
        {
            @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
        }

        <!--begin: Search Form -->
        @using (Html.BeginForm("Index", "Visits", FormMethod.Get, new { @class = "kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10" }))
        {
            <div class="row align-items-center">
                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row align-items-center">

                        <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">


                            <div class="kt-form__control">
                                <label>الموقع</label>
                                @Html.DropDownList("locationId", ViewData["LocatiosLst"] as SelectList, @Amana.GlobalResources.Cpanel.ChooseOption, new { @class = "form-control" })


                            </div>


                        </div>
                        <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">


                            <div class="kt-form__control">
                                <label>الشهر</label>
                                @*<input id="month" name="month" type="number" class="form-control" value="@month" />*@
                                @Html.DropDownList("month", new List<SelectListItem>
                             {
                                 new SelectListItem{ Text= "يناير", Value = "1" , Selected= (month=="1") },
                                 new SelectListItem{ Text= "فبراير", Value = "2", Selected= (month=="2") },
                                 new SelectListItem{ Text= "مارس", Value = "3", Selected= (month=="3") },
                                 new SelectListItem{ Text= "إبريل", Value = "4", Selected= (month=="4") },
                                 new SelectListItem{ Text= "مايو", Value = "5", Selected= (month=="5")},
                                 new SelectListItem{ Text= "يونيو", Value =  "6", Selected= (month=="6")},
                                 new SelectListItem{ Text= "يوليو", Value =  "7", Selected= (month=="7")},
                                 new SelectListItem{ Text= "أغسطس", Value = "8", Selected= (month=="8")},
                                 new SelectListItem{ Text= "سبتمبر", Value =  "9", Selected= (month=="9")},
                                 new SelectListItem{ Text= "أكتوبر", Value =  "10", Selected= (month=="10")},
                                 new SelectListItem{ Text= "نوفمبر", Value =  "11", Selected= (month=="11")},
                                 new SelectListItem{ Text= "ديسمبر", Value =  "12", Selected= (month=="12")},
                             }, new { @class = "form-control" })
                            </div>


                        </div>
                        <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">


                            <div class="kt-form__control">
                                <label>السنة</label>
                                <input id="year" name="year" type="number" class="form-control" value="@year" />

                            </div>


                        </div>
                        <div class="col-md-3">

                            <input type="submit" value="@Amana.GlobalResources.Cpanel.Search" class="btn btn-success btn-sm kt-mt-20" />

                        </div>

                    </div>
                </div>

            </div>

        }
        <div class="row align-items-center kt-mt-20 kt-mb-20">
            <h4>اجمالي عدد الزيارات التى تمت  : @Model.Sum(a => a.DoneVisitsCount) من  @Model.Sum(a => a.TotalVisitsCount)</h4>
        </div>
        <!--end: Search Form -->
        <!--begin: Datatable -->
        @if (Model.Count > 0)
        {
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>

                        <th>كود المصنع</th>
                        <th>اسم المصنع</th>
                        <th>الموقع</th>
                        <th>تاريخ أخر زيارة</th>
                        <th>عدد الزيارات التى تمت</th>
                        <th>العدد الكلي</th>
                        <th>

                        </th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>
                                    @item.CodeNo
                                </td>
                                <td>
                                    @item.Name
                                    @if (item.IsTemporaryClosed == true)
                                    {
                                        <span class="btn btn-bold btn-sm btn-font-sm  btn-label-danger">المصنع مغلق</span>
                                    }
                                    @if (item.IsIntensiveVisits == true)
                                    {
                                        <span class="btn btn-sm btn-label-warning btn-bold">مراقبة مكثفة</span>
                                    }
                                </td>

                                <td style="@(string.IsNullOrEmpty(item.Location) ? "color:red;font-weight:bold" : "")">
                                    @item.Location
                                </td>
                                <td>
                                    @if (item.LastVisitDate.HasValue)
                                    {
                                        <text> @item.LastVisitDate.Value.ToString("dd / MM / yyyy")</text>
                                    }
                                </td>
                                <td>
                                    @item.DoneVisitsCount
                                </td>
                                <td>
                                    @item.TotalVisitsCount
                                </td>

                                <td nowrap>
                                    <button type="button" class="btn btn-bold btn-label-brand btn-sm" data-toggle="modal" data-target="#kt_modal_@item.ID">عرض الزيارات</button>

                                    <!--begin::Modal-->
                                    <div class="modal fade" id="kt_modal_@item.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                @Html.Partial("_VisitsModal", item.VisitsList)
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

            <!--end: Datatable -->
        }
        else
        {
            <p>لا توجد بيانات</p>
        }
    </div>
    </div>

@section sectionScripts{
    <!--begin::Page Vendors(used by this page) -->
    <script src="/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

    <script>
        "use strict";
        var KTDatatablesDataSourceHtml = function () {

            var initTable1 = function () {
                var table = $('#kt_table_1');

                // begin first table
                table.DataTable({
                    responsive: true,
                    pageLength: 25,
                    columnDefs: [

                    ],
                });

            };

            return {

                //main function to initiate the module
                init: function () {
                    initTable1();
                },

            };

        }();

        $(document).ready(function () {
            KTDatatablesDataSourceHtml.init();
            $("#liVisits").addClass("kt-menu__item--open");
        });
    </script>
}





