@model Amana.ViewModels.C_UserRolesViewModel

@{
    Layout = "_Layout.cshtml";
}

<h1>@Amana.GlobalResources.Users.UserRoles - @Amana.GlobalResources.Cpanel.Create</h1>
<div class="sep100x100"></div>

@if (ViewBag.Success == true)
{
    @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
}

@using (Html.BeginForm("Create", "C_UserRoles", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RoleId)
    
    <div>
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TypeId, @Amana.GlobalResources.Cpanel.NodeType)
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.TypeId, ViewData["NodeTypes"] as SelectList, @Amana.GlobalResources.Cpanel.ChooseOption)
                @Html.ValidationMessageFor(model => model.TypeId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, @Amana.GlobalResources.Cpanel.Title)
            <div class="col-md-7">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="sep100x100"></div>
        <div class="form-group">
            <div>
                <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" name="command" class="lnkCreate lnkInline" /> |
                <input type="submit" value="@Amana.GlobalResources.Cpanel.SaveNew" name="command" class="lnkCreate lnkInline saveNew" /> |
                @Html.ActionLink(@Amana.GlobalResources.Cpanel.BackToList, "Index", null, new { @class = "lnkBack" })
            </div>
        </div>
    </div>
}
