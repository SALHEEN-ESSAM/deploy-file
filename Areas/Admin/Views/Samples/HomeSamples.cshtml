@model  List<Amana.Models.Entities.VisitsSample>
@using Amana.Models.Utilities;
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = null;
    var user = (Amana.Models.Entities.C_UserItems)HttpContext.Current.Session["UserDetails"];
}

@if (ViewBag.Success == true)
{
    @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
}
<div class="container">

    <!--begin: Datatable -->
    @if (Model.Count > 0)
    {
        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
            <thead>
                <tr>
                    <th>@Cpanel.SampleNo</th>
                    @if (user.RoleId != 1004)
                    {
                <th>@Cpanel.SampleDate</th>
                        <th>@Cpanel.FactoryName</th>
                        <th>@Cpanel.Observer</th>
                        <th>@Cpanel.Status</th>
                    }
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>
                                @item.SampleId
                            </td>
                            @if (user.RoleId != 1004)
                            {
                                <td>
                                    @item.Visits.VisitDate.ToString("dd / MM / yyyy")
                                </td>
                                <td>
                                    @item.Visits.Factories.Name
                                </td>
                                <td>
                                    @item.Visits.C_UserItems.Name
                                </td>
                                <td>
                                    @Html.Raw(Html.SampleStatusBadge(item.SampleStatus))

                                </td>
                            }
                            <td nowrap>

                                @if (user.RoleId == 1004)
                                {


                                    <a href="javascript:;" onclick="window.open('@Url.Action("PrintStickers", new { id = item.VisitId })', 'MsgWindow','width=500,height=700');" class="btn btn-warning btn-sm mr-2">
                                        <img src="/Content/assets/media/icons/svg/Devices/Printer.svg" />
                                        @Cpanel.PrintSticker
                                    </a>


                                    if (item.SampleStatus == (int)Amana.Models.Enums.SampleStatusEnum.InReception)
                                    {
                                        <a href="@Url.Action("ChangeStatus", new { id = item.VisitId, status = (int)Amana.Models.Enums.SampleStatusEnum.InLab })" onclick="return confirm('هل أنت متاكد من استلام العينة رقم ( @item.SampleId ) ؟');" class="btn btn-success">@Cpanel.ReciptIsDone</a>

                                    }
                                }
                                else
                                {
                                    if (user.RoleId == 1005)
                                    {
                                        <a href="@Url.Action("SampleReport","Reports", new { visitId = item.VisitId })" class="btn btn-warning btn-sm mr-2">
                                          @Cpanel.ViewReport
                                        </a>
                                    }
                                    <a href="@Url.Action("SampleDetails", new { id = item.VisitId })" class="btn btn-info btn-sm mr-2">
                                       @Cpanel.SampleDetails
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

        <!--end: Datatable -->
    }
    else
    {
        <p>@Cpanel.NoData</p>
    }
    <br />
</div>






