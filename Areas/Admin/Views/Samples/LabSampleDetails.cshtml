@model Amana.ViewModels.VisitsAndSamples.SampleLabViewModel
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    bool canEdit = ViewBag.CanEdit;
    var user = (Amana.Models.Entities.C_UserItems)HttpContext.Current.Session["UserDetails"];

}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Samples
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    @ctgry.SuperCategoryName
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">  @Cpanel.EnterSampleCylindar</span>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                       @Cpanel.EnterSampleCylindar
                    </h3>
                </div>
            </div>

            <!--begin::Form-->

            @using (Html.BeginForm("LabSampleDetails", "Samples", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right", id = "frmSampleDetails" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.VisitId)
                @Html.HiddenFor(model => model.SampleId)
                @Html.HiddenFor(model => model.LabRecieveDate)
                @Html.HiddenFor(model => model.SampleDate)


                <div class="kt-portlet__body">
                    @if (ViewBag.Success == true)
                    {
                        @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                    }
                    <div class="kt-section kt-section--first">
                        <div class="form-group row">
                            <div class="col-md-1">
                                <label>
                                    @Cpanel.SampleNo :
                                </label>

                            </div>
                            <div class="col-md-2">
                                <h4>
                                    @Model.SampleId
                                </h4>

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>
                                    @Html.LabelFor(model => model.LabBreakingDate7Day, Cpanel.Day7CrushingDate)
                                </label>
                                @Html.TextBoxFor(model => model.LabBreakingDate7Day, new { @class = "form-control", disabled = "disabled" })
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist7days1, Cpanel.Cylindar) 1
                                </label>
                                @Html.TextBoxFor(model => model.LabResist7days1, new { @class = "form-control cls7" })
                                @Html.ValidationMessageFor(model => model.LabResist7days1)
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist7days2, Cpanel.Cylindar) 2
                                </label>
                                @Html.TextBoxFor(model => model.LabResist7days2, new { @class = "form-control cls7" })
                                @Html.ValidationMessageFor(model => model.LabResist7days2)
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist7days3, Cpanel.Cylindar) 3
                                </label>
                                @Html.TextBoxFor(model => model.LabResist7days3, new { @class = "form-control cls7" })
                                @Html.ValidationMessageFor(model => model.LabResist7days3)
                            </div>
                            <div class="col-md-3">
                                <label>
                                    @Html.LabelFor(model => model.LabResist7days, Cpanel.Days7CrushingRate)
                                </label>
                                @Html.TextBoxFor(model => model.LabResist7days, new { @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.LabResist7days)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>
                                    @Html.LabelFor(model => model.LabBreakingDate28Day, Cpanel.Days7CrushingRate)
                                </label>
                                @Html.TextBoxFor(model => model.LabBreakingDate28Day, new { @class = "form-control", disabled = "disabled" })
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist28days1, Cpanel.Cylindar) 1
                                </label>
                                @Html.TextBoxFor(model => model.LabResist28days1, new { @class = "form-control cls28" })
                                @Html.ValidationMessageFor(model => model.LabResist28days1)
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist28days2, Cpanel.Cylindar) 2
                                </label>
                                @Html.TextBoxFor(model => model.LabResist28days2, new { @class = "form-control cls28" })
                                @Html.ValidationMessageFor(model => model.LabResist28days2)
                            </div>
                            <div class="col-md-1">
                                <label>
                                    @Html.LabelFor(model => model.LabResist28days3, Cpanel.Cylindar) 3
                                </label> 
                                @Html.TextBoxFor(model => model.LabResist28days3, new { @class = "form-control cls28" })
                                @Html.ValidationMessageFor(model => model.LabResist28days3)
                            </div>
                            <div class="col-md-3">
                                <label>
                                    @Html.LabelFor(model => model.LabResist28days, Cpanel.Days28CrushingRate)
                                </label>
                                @Html.TextBoxFor(model => model.LabResist28days, new { @class = "form-control", disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.LabResist28days)
                            </div>
                        </div>

                    </div>


                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-6">
                                @if (canEdit == true)
                                {
                                    <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                                }
                                @if (Model.LabResist7days.HasValue && Model.LabResist28days.HasValue && Model.SampleStatus == 3)//المختبر
                                {
                                    <a href="@Url.Action("ChangeStatus",new {id= Model.VisitId , status = 4 })" class="btn btn-success">@Cpanel.FinishSample</a>
                                }

                                @*@if (user.RoleId == 1004 && Model.SampleStatus == 3)//الاستقبال
                                    {
                                        <a onclick="window.print();" href="javascript:;" class="btn btn-warning btn-sm kt-mt-20">
                                            <img src="/Content/assets/media/icons/svg/Devices/Printer.svg" />
                                            طباعة
                                        </a>
                                    }*@
                                @if (user.RoleId == null)
                                {
                                    @Html.ActionLink(@Amana.GlobalResources.Cpanel.BackToList, "Index", new { }, new { @class = "btn btn-secondary" })
                                }
                                else
                                {
                                    @Html.ActionLink(@Amana.GlobalResources.Cpanel.Back, "Index", "Home", new { }, new { @class = "btn btn-secondary" })

                                }

                            </div>

                        </div>
                    </div>
                </div>

            }


            <!--end::Form-->
        </div>


    </div>
</div>

@if (canEdit == false)
{
    <script>
        $(document).ready(function () {

            $('#frmSampleDetails input').attr("disabled", "disabled");
        });
    </script>

}
@if (Model.Edit28DayResults == false)
{
    <script>
        $(document).ready(function () {

            $('.cls28').attr("disabled", "disabled");
        });
    </script>

}
else if (user.RoleId.HasValue)
{
    <script>
        $(document).ready(function () {

            $('.cls28').attr("required", "required");

        });
    </script>
}
@if (Model.Edit7DayResults == false)
{
    <script>
        $(document).ready(function () {

            $('.cls7').attr("disabled", "disabled");
        });
    </script>

}
else if (user.RoleId.HasValue)
{
    <script>
        $(document).ready(function () {
            $('.cls7').attr("required", "required");

        });
    </script>
}
<script>


    $(document).ready(function () {
        $("#liLab").addClass("kt-menu__item--open");
    });
</script>



