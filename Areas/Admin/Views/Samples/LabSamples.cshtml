@model  List<Amana.Models.Entities.VisitsSample>
@using Amana.Models.Utilities;
@using Amana.Models.Helpers;
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    var user = (Amana.Models.Entities.C_UserItems)HttpContext.Current.Session["UserDetails"];

}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Samples
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    قائمة
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">@Cpanel.EnterSampleResults  </span>

        </div>
    </div>
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>

            <h3 class="kt-portlet__head-title">
                @Cpanel.EnterSampleResults
            </h3>

        </div>
        @*<div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <a href="@Url.Action("Create")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>
                    </div>
                </div>
            </div>*@
    </div>

    <div class="kt-portlet__body">
        @if (ViewBag.Success == true)
        {
            @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
        }
        @using (Html.BeginForm("LabSamples", "Samples", FormMethod.Get, new { @class = "kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10" }))
        {
            <div class="row align-items-center">
                <div class="col-xl-12 order-2 order-xl-1">
                    <div class="row align-items-center">
                        <div class="col-md-1 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.SampleNo</label>
                                <input id="sampleId" name="sampleId" type="text" class="form-control" />
                            </div>
                        </div>


                        <div class="col-md-1">
                            <input type="submit" value="@Amana.GlobalResources.Cpanel.Search" class="btn btn-default kt-mt-20" />
                        </div>

                    </div>
                </div>

            </div>

        }

        <div class="container">

            <!--begin: Datatable -->
            @if (Model.Count > 0)
            {
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                    <thead>
                        <tr>
                            <th>@Cpanel.SampleNo</th>
                            <th>@Cpanel.SampleDate</th>
                            <th>@Cpanel.Day7CrushingDate</th>
                            <th>@Cpanel.Day7CrushingResult</th>
                            <th>@Cpanel.Day28CrushingDate</th>
                            <th>@Cpanel.Day28CrushingResult</th>
                            @*<th>حالة العينة</th>*@
                            <th>
                                @Cpanel.Details
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>
                                        @item.SampleId
                                    </td>
                                    <td>
                                        @item.SampleDate.ToString("dd / MM / yyyy")
                                    </td>
                                    <td>
                                        @(item.LabBreakingDate7Day.HasValue? item.LabBreakingDate7Day.Value.ToString("dd / MM / yyyy") : "")
                                    </td>
                                    <td>
                                        @item.LabResist7days
                                    </td>
                                    <td>
                                        @(item.LabBreakingDate28Day.HasValue? item.LabBreakingDate28Day.Value.ToString("dd / MM / yyyy") : "")
                                    </td>
                                    <td>
                                        @item.LabResist28days
                                    </td>
                                    @*<td>
                                            @Html.Raw(Html.SampleStatusBadge(item.SampleStatus))

                                        </td>*@
                                    <td nowrap>

                                        <a href="@Url.Action("LabSampleDetails",new {id= item.VisitId})" class="btn btn-info btn-sm mr-2">
                                           @Cpanel.EnterSampleResult
                                        </a>

                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

                <!--end: Datatable -->
            }
            else
            {
                <p>@Cpanel.NoData</p>
            }
            <br />
        </div>

    </div>
</div>

@section sectionScripts{
    <script>
        $("#liLab").addClass("kt-menu__item--open");
    </script>
}





