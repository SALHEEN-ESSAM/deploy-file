@using Amana.Models.Utilities;
@using Amana.Models.Helpers;
@using Amana.GlobalResources;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";

    List<Amana.Models.Entities.VisitsSample> List7Days = (List<Amana.Models.Entities.VisitsSample>)ViewBag.List7Days;
    List<Amana.Models.Entities.VisitsSample> List28Days = (List<Amana.Models.Entities.VisitsSample>)ViewBag.List28Days;
    string startDate = string.IsNullOrEmpty(Request["startDate"]) ? HelperMethods.GetCurrentDateTime().ToString("dd/MM/yyyy") : Request["startDate"].ToString();

}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Samples
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            @*<span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="" class="kt-subheader__breadcrumbs-link">
                    قائمة
                </a>*@
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"> @Cpanel.DailyCrushingList  </span>

        </div>
    </div>
}
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>

            <h3 class="kt-portlet__head-title">
                @Cpanel.DailyCrushingList
            </h3>

        </div>
        @*<div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <a href="@Url.Action("Create")" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            إضافة
                        </a>
                    </div>
                </div>
            </div>*@
    </div>
    <div class="kt-portlet__body">
        @using (Html.BeginForm("DailyBreakingDateSamples", "Samples", FormMethod.Get, new { @class = "kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10" }))
        {
            <div class="row align-items-center">

                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row align-items-center">
                        <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__control">
                                <label>@Cpanel.Date</label>
                                <input id="startDate" name="startDate" type="text" class="form-control kt_datepicker_1" value="@startDate" />
                            </div>
                        </div>

                        <div class="col-md-1 noPrint">
                            <input type="submit" value="@Amana.GlobalResources.Cpanel.Search" class="btn btn-default kt-mt-20" />
                        </div>

                    </div>
                </div>


            </div>

        }
    </div>
    <div class="row">
        <div class="col-xl-6">

            <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @Cpanel.Days7CrushingSamples
                        </h3>
                    </div>

                </div>
                <div class="kt-portlet__body">
                    @if (List7Days.Count > 0)
                    {
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                            <thead>
                                <tr>
                                    <th>@Cpanel.SampleNo</th>
                                    <th>@Cpanel.SampleDate</th>
                                    <th>@Cpanel.Day7CrushingDate</th>
                                    <th>
                                        @Cpanel.Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in List7Days)
                                    {
                                        i++;
                                        <tr>
                                            <td>
                                                @item.SampleId
                                            </td>
                                            <td>
                                                @item.SampleDate.ToString("dd / MM / yyyy")
                                            </td>
                                            <td>
                                                @(item.LabBreakingDate7Day.HasValue? item.LabBreakingDate7Day.Value.ToString("dd / MM / yyyy") : "")
                                            </td>
                                            @*<td>
                                                    @(item.LabBreakingDate28Day.HasValue? item.LabBreakingDate28Day.Value.ToString("dd / MM / yyyy") : "")
                                                </td>*@
                                            @*<td>
                                                    @Html.Raw(Html.SampleStatusBadge(item.SampleStatus))

                                                </td>*@
                                            <td nowrap>

                                                <a href="@Url.Action("LabSampleDetails",new {id= item.VisitId})" class="btn btn-warning btn-sm mr-2">
                                                   @Cpanel.EnterSampleResult
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>

                        <!--end: Datatable -->
                    }
                    else
                    {
                        <p>@Cpanel.NoData</p>
                    }

                </div>
            </div>

        </div>
        <div class="col-xl-6">

            <!--Begin::Portlet-->
            <div class="kt-portlet kt-portlet--height-fluid">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @Cpanel.Days28CrushingSamples
                        </h3>
                    </div>

                </div>
                <div class="kt-portlet__body">
                    @if (List28Days.Count > 0)
                    {
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                            <thead>
                                <tr>
                                    <th>@Cpanel.SampleNo</th>
                                    <th>@Cpanel.SampleDate</th>
                                <th>@Cpanel.Day28CrushingDate</th>
                                    <th>
                                        @Cpanel.Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in List28Days)
                                    {
                                        i++;
                                        <tr>
                                            <td>
                                                @item.SampleId
                                            </td>
                                            <td>
                                                @item.SampleDate.ToString("dd / MM / yyyy")
                                            </td>
                                            @*<td>
                                                    @(item.LabBreakingDate7Day.HasValue? item.LabBreakingDate7Day.Value.ToString("dd / MM / yyyy") : "")
                                                </td>*@
                                            <td>
                                                @(item.LabBreakingDate28Day.HasValue? item.LabBreakingDate28Day.Value.ToString("dd / MM / yyyy") : "")
                                            </td>
                                            @*<td>
                                                    @Html.Raw(Html.SampleStatusBadge(item.SampleStatus))

                                                </td>*@
                                            <td nowrap>

                                                <a href="@Url.Action("LabSampleDetails",new {id= item.VisitId})" class="btn btn-info btn-sm mr-2">
                                                    @Cpanel.EnterSampleResult
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>

                        <!--end: Datatable -->
                    }
                    else
                    {
                <p>@Cpanel.NoData</p>
                    }
                </div>
            </div>

            <!--End::Portlet-->
        </div>
    </div>



</div>

@section sectionScripts{
    <script>
        $("#liLab").addClass("kt-menu__item--open");

    </script>
}





