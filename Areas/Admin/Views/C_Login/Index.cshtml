@{
    Layout = "~/Areas/Admin/Views/Shared/_Root2.cshtml";
}

@section sectionHead{
    <link href="/Content/assets/css/demo1/pages/general/login/login-6.rtl.css" rel="stylesheet" type="text/css" />

}


<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root">
    <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v6 kt-login--signin" id="kt_login">
        <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">
            <div class="kt-grid__item  kt-grid__item--order-tablet-and-mobile-2  kt-grid kt-grid--hor kt-login__aside">
                <div class="kt-login__wrapper">
                    <div class="kt-login__container">
                        <div class="kt-login__body">
                            <div class="kt-login__logo">
                                <a href="#">
                                    <img src="/Content/assets/media/logos/logo-light.png" style="max-height:150px">
                                </a>
                            </div>
                            <div class="kt-login__signin">
                                <div class="kt-login__head">
                                    <h3 class="kt-login__title">تسجيل الدخول</h3>
                                </div>
                                <div class="kt-login__form">
                                    @model Amana.ViewModels.C_LoginViewModel
                                    @{
                                        var returnUrl = Request.QueryString["return"];
                                    }
                                    @if (ViewBag.CustomSuccess != null)
                                    {
                                        @Html.Partial("~/Areas/Admin/Views/Shared/UcCustomSuccess.cshtml", new ViewDataDictionary { { "CustomSuccess", ViewBag.CustomSuccess } })
                                    }

                                    @if (ViewBag.CustomError != null)
                                    {
                                        @Html.Partial("~/Areas/Admin/Views/Shared/UcCustomError.cshtml", ViewBag.CustomError as string)
                                    }
                                    @using (Html.BeginForm("Index", "C_Login", new { returnUrl = returnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", id = "formLogin", @class = "kt-form" }))
                                    {
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Amana.GlobalResources.Users.Email, autocomplete = "off" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-last", placeholder = @Amana.GlobalResources.Users.Password })
                                            @Html.ValidationMessageFor(model => model.Password)

                                        </div>
                                        <div class="kt-login__extra">
                                            <label class="kt-checkbox">
                                                @Html.CheckBoxFor(m => m.IsRemember, new { @checked = true })
                                                تذكرني
                                                <span></span>
                                            </label>
                                            <a href="javascript:;" id="kt_login_forgot">نسيت كلمة المرور</a>
                                        </div>
                                        <div class="kt-login__actions">
                                            @*<button id="kt_login_signin_submit" class="btn btn-brand btn-pill btn-elevate">@Amana.GlobalResources.Users.Login</button>*@
                                            <input type="submit" class="btn btn-brand btn-pill btn-elevate" value="@Amana.GlobalResources.Users.Login">

                                        </div>



                                    }

                                </div>
                            </div>

                            <div class="kt-login__forgot">
                                <div class="kt-login__head">
                                    <h3 class="kt-login__title">نسيت كلمة المرور ؟</h3>
                                    <div class="kt-login__desc">أكتب بريدك الإلكتروني وسيتم ارسال كلمة مرور جديدة اليك:</div>
                                </div>
                                <div class="kt-login__form">
                                    <form class="kt-form" action="">
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="البريد الإلكتروني" name="email" id="kt_email" autocomplete="off">
                                        </div>
                                        <div class="kt-login__actions">
                                            <button id="kt_login_forgot_submit" class="btn btn-brand btn-pill btn-elevate">إرسال</button>
                                            <button id="kt_login_forgot_cancel" class="btn btn-outline-brand btn-pill">إلغاء</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="kt-login__account">
                            <span class="kt-login__account-msg">
                                Don't have an account yet ?
                            </span>&nbsp;&nbsp;
                            <a href="javascript:;" id="kt_login_signup" class="kt-login__account-link">Sign Up!</a>
                        </div>*@
                </div>
            </div>
            <div class="kt-grid__item kt-grid__item--fluid kt-grid__item--center kt-grid kt-grid--ver kt-login__content" style="background-image: url(/Content/assets/media/bg/loginBG.jpeg); background-size: 65% 85%; background-color:lightgray; background-position-x: center; background-position-y: center">
                <div class="kt-login__section">
                    <div class="kt-login__block">
                        @*<img src="" />*@
                        @*<h3 class="kt-login__title">Join Our Community</h3>
                            <div class="kt-login__desc">
                                Lorem ipsum dolor sit amet, coectetuer adipiscing
                                <br>elit sed diam nonummy et nibh euismod
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




