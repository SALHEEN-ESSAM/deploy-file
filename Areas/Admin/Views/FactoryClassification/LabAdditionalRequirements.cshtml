@model Amana.ViewModels.Classifications.LabAdditionalRequirementsViewModel
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    Amana.Models.Entities.Cls_FactoryClassifications classificationItem = (Amana.Models.Entities.Cls_FactoryClassifications)ViewBag.ClassificationItem;

    Amana.ViewModels.Classifications.LabAdditionalRequirementsFormViewModel formViewModel = ViewBag.FormViewModel;
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Classification
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">@Cpanel.FactoryDataEntry</span>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
                @Cpanel.LabSuppRequirements
            </span>

        </div>
    </div>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding:0px;">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        @if (classificationItem != null)
        {

            <div class="col-md-4">
                @Html.Partial("_ClassificationItem", classificationItem);
            </div>

        }

        <div class="col-md-8">

            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    @Cpanel.LabSuppRequirements

                                </h3>
                            </div>
                        </div>


                        <!--begin::Form-->
                        <div class="kt-portlet__body">
                            @if (ViewBag.Success == true)
                            {
                                @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                            }
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a id="kt_link_1" class="nav-link active" data-toggle="tab" href="#" data-target="#kt_tabs_1">@Cpanel.EquipmentFeatures</a>
                                </li>

                                <li class="nav-item">
                                    <a id="kt_link_2" class="nav-link" data-toggle="tab" href="#kt_tabs_2">@Cpanel.PressureResistanceTestRequirements</a>
                                </li>

                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="kt_tabs_1" role="tabpanel">
                                    @using (Html.BeginForm("LabAdditionalRequirements", "FactoryClassification", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        @Html.HiddenFor(model => model.ClassificationId)

                                        <div class="kt-portlet__body">
                                            <div class="kt-section kt-section--first">

                                                <h3 class="kt-section__title">
                                                    1.  @Cpanel.Laboratory
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListProp20)
                                                    {
                                                        Html.RenderPartial("_ClsProperty", item);
                                                    }

                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <h3 class="kt-section__title">
                                                    2. @Cpanel.TechnicalStaff
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListProp21)
                                                    {
                                                        Html.RenderPartial("_ClsProperty", item);
                                                    }

                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <h3 class="kt-section__title">
                                                    3.  @Cpanel.AdditionalDevices
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListProp22)
                                                    {
                                                        Html.RenderPartial("_ClsProperty", item);
                                                    }

                                                </div>

                                                <div class="form-group row kt-padding-t-20">
                                                    <div class="col-lg-6">
                                                        <label>
                                                            @Cpanel.StandardCylindrical
                                                            :
                                                        </label>
                                                        @Html.EditorFor(model => model.CylindricalMolds, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.CylindricalMolds)
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label>
                                                            @Cpanel.StandardCube
                                                            :
                                                        </label>
                                                        @Html.EditorFor(model => model.Cubes, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Cubes)
                                                    </div>
                                                </div>
                                            </div>




                                        </div>
                                        <div class="kt-portlet__foot">
                                            <div class="kt-form__actions">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                                                    </div>
                                                    @*<div class="col-lg-6 kt-align-right">
                                                            <button type="reset" class="btn btn-danger">Delete</button>
                                                        </div>*@
                                                </div>
                                            </div>
                                        </div>

                                    }


                                </div>
                                <div class="tab-pane" id="kt_tabs_2" role="tabpanel">
                                    @Html.Partial("_LabAdditionalReqForm", formViewModel)
                                </div>

                            </div>
                        </div>


                        <!--end::Form-->
                    </div>


                </div>
            </div>
        </div>


    </div>

    <!--End::App-->
</div>
@section sectionScripts{
    <script>
        $(document).ready(function () {
            $("#lnkLabAdditionalRequirements").addClass("kt-widget__item--active");
        });

    </script>
}





