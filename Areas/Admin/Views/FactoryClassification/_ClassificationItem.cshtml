            </span>
            @if (Model.IsOperatingEffDone)
            {
                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
            }
            else
            {
                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
            }
        </a>*@
                        <a id="lnkFinalSummary" href="@Url.Action("FinalSummary",new {id=Model.ClassificationId })" class="kt-widget__item">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <i class="fa fa-arrow-left"></i>
                                </span>
                                <span class="kt-widget__desc">
                                   @Cpanel.FinalClassificationStatement
                                </span>
                            </span>
                            @if (Model.IsOveralReport)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
                        </a>
                        <br />
                    </div>
                    <div class="kt-widget__action text-center">
                        <a  href="@Url.Action("BasicRequirements",new {id=Model.ClassificationId })" class="btn btn-success btn-sm">@Cpanel.Edit</a>&nbsp;
                        @*<button type="button" class="btn btn-danger btn-sm">حذف</button>*@
                    </div>
                </div>
            </div>

            <!--end::Widget -->
        </div>
    </div>

    <!--end:: Widgets/Applications/User/Profile1-->
</div>