@model Amana.Models.Entities.Cls_FactoryClassifications
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = null;
}


<div class="kt-grid__item" id="kt_user_profile_aside" style="opacity: 1;">

    <!--begin:: Widgets/Applications/User/Profile1-->
    <div class="kt-portlet kt-portlet--height-fluid-">
        <div class="kt-portlet__head  kt-portlet__head--noborder">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    @Model.Factories.Name
                </h3>
            </div>

        </div>
        <div class="kt-portlet__body kt-portlet__body--fit-y">

            <!--begin::Widget -->
            <div class="kt-widget kt-widget--user-profile-1">

                <div class="kt-widget__body">
                    <div class="kt-widget__content" style="padding:10px;">
                        <div class="kt-widget__info">
                            <div class="col-md-4">@Cpanel.Period : </div>
                            <div class="col-md-8"> @Model.StngTimePeriods.Title</div>

                        </div>
                        <div class="kt-widget__info">
                            <div class="col-md-4">@Cpanel.EntryDate : </div>
                            <div class="col-md-8">@Model.CreatedWhen.ToString("dd / MM / yyyy")</div>

                        </div>
                        @*<div class="kt-widget__info">
                                <span class="kt-widget__label">Location:</span>
                                <span class="kt-widget__data">Melbourne</span>
                            </div>*@


                        <div class="kt-widget12__progress kt-padding-t-10">
                            <div class="progress kt-progress--sm">

                                <div class="progress-bar kt-bg-brand" role="progressbar" style="width:@Html.ClsProgressBar(Model)%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <span class="kt-widget12__stat">
                                @Html.ClsProgressBar(Model)%
                            </span>
                        </div>
                    </div>
                    <div class="kt-widget__items">
                        @*kt-widget__item--active*@
                        <a id="lnkBasicRequirements" href="@Url.Action("BasicRequirements",new {id=Model.ClassificationId })" class="kt-widget__item ">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <span class="kt-widget__icon">
                                        <i class="fa fa-arrow-left"></i>
                                    </span>
                                </span>
                                <span class="kt-widget__desc">
                                    @Cpanel.BasicRequirements
                                   
                                </span>
                            </span>
                            @if (Model.IsBasicReqDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
                        </a>
                        <a id="lnkAdditionalRequirements" href="@Url.Action("AdditionalRequirements",new {id=Model.ClassificationId })" class="kt-widget__item ">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <span class="kt-widget__icon">
                                        <i class="fa fa-arrow-left"></i>
                                    </span>
                                </span>
                                <span class="kt-widget__desc">
                                    @Cpanel.SupplementaryRequirements
                                </span>
                            </span>
                            @if (Model.IsAddReqDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }

                        </a>
                        <a id="lnkLabBasicRequirements" href="@Url.Action("LabBasicRequirements",new {id=Model.ClassificationId })" class="kt-widget__item ">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <span class="kt-widget__icon">
                                        <i class="fa fa-arrow-left"></i>
                                    </span>
                                </span>
                                <span class="kt-widget__desc">
                                   @Cpanel.LabRequirements
                                </span>

                            </span>
                            @if (Model.IsBasicLabReqDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
                        </a>
                        <a id="lnkLabAdditionalRequirements" href="@Url.Action("LabAdditionalRequirements",new {id=Model.ClassificationId })" class="kt-widget__item ">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <span class="kt-widget__icon">
                                        <i class="fa fa-arrow-left"></i>
                                    </span>
                                </span>
                                <span class="kt-widget__desc">
                                    @Cpanel.LabSuppRequirements
                                </span>
                            </span>
                            @if (Model.IsAddLabReqDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
                        </a>
                        <a id="lnkLabQCRequirements" href="@Url.Action("LabQCRequirements",new {id=Model.ClassificationId })" class="kt-widget__item ">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <i class="fa fa-arrow-left"></i>
                                </span>
                                <span class="kt-widget__desc">
                                   @Cpanel.LaboratoryQualityActivities
                                </span>
                            </span>
                            @if (Model.IsQCLabReqDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
                        </a>
                        <a id="lnkConcreteMixturesInfo" href="@Url.Action("ConcreteMixturesInfo",new {id=Model.ClassificationId })" class="kt-widget__item">
                            <span class="kt-widget__section">
                                <span class="kt-widget__icon">
                                    <i class="fa fa-arrow-left"></i>
                                </span>
                                <span class="kt-widget__desc">
                                   @Cpanel.ConcreteMixes
                                </span>
                            </span>
                            @if (Model.IsConcMixturesDone)
                            {
                                <span class="kt-badge kt-badge--unified-success kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-check"></i></span>
                            }
                            else
                            {
                                <span class="kt-badge kt-badge--unified-danger kt-badge--sm kt-badge--rounded kt-badge--bolder"><i class="fa fa-times"></i></span>
                            }
