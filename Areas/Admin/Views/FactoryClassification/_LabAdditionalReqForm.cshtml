@model Amana.ViewModels.Classifications.LabAdditionalRequirementsFormViewModel
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = null;
}

@using (Html.BeginForm("LabAdditionalReqForm", "FactoryClassification", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ClassificationId)

    <div class="kt-portlet__body">

        <div class="form-group row">
           
                <label class="col-3 col-form-label">
                    @Cpanel.ConcreteCrushing
                    :
                </label>
                <div class="col-9">
                    @Html.EditorFor(model => model.ConcreteMachine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConcreteMachine)
                </div>
              
       
           
        </div>
        <div class="form-group row">

            <label class="col-3 col-form-label">
               @Cpanel.ManufacturingYear
                :
            </label>
            <div class="col-9">
                @Html.EditorFor(model => model.ManufacturingYear, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ManufacturingYear)
            </div>
        </div>
        <div class="form-group row">

            <label class="col-3 col-form-label">
               @Cpanel.MachineType
                :
            </label>
            <div class="col-9">
                <div class="kt-radio-inline">
                    <label class="kt-radio kt-radio--brand">
                        @Html.RadioButtonFor(model => model.MachineType, 1) @Cpanel.DigitalAndGood
                        <span></span>
                    </label>
                    <label class="kt-radio kt-radio--brand">
                        @Html.RadioButtonFor(model => model.MachineType, 2) @Cpanel.NormalAndGood
                        <span></span>
                    </label>
                    <label class="kt-radio kt-radio--brand">
                        @Html.RadioButtonFor(model => model.MachineType, 3) @Cpanel.InUnacceptable
                        <span></span>
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.MachineType)
            </div>

        </div>
        <div class="form-group row">

            <label class="col-3 col-form-label">
               @Cpanel.DownloadSpeed
        
            </label>
            <div class="col-9">
                <div class="kt-radio-inline">
                    <label class="kt-radio kt-radio--brand">
                        @Html.RadioButtonFor(model => model.ControlSpeedWay, 1) @Cpanel.Automatic
                        <span></span>
                    </label>
                    <label class="kt-radio kt-radio--brand">
                        @Html.RadioButtonFor(model => model.ControlSpeedWay, 2) @Cpanel.Manual
                        <span></span>
                    </label>

                </div>
                @Html.ValidationMessageFor(model => model.ControlSpeedWay)
            </div>

        </div>
        <div class="form-group row">

            <label class="col-3 col-form-label">
               @Cpanel.TemperatureControl
                :
            </label>
            <div class="col-9">
                <div class="kt-checkbox-list">
                    @*<label class="kt-checkbox kt-checkbox--bold kt-checkbox--brand">
                        @Html.CheckBoxFor(model => model.IsProcessingCheck1) بواسطة غرف يتم التحكم بدرجة حرراتها
                        <span></span>
                    </label>*@
                    <label class="kt-checkbox kt-checkbox--bold kt-checkbox--brand">
                        @Html.CheckBoxFor(model => model.IsProcessingCheck2) @Cpanel.ByAirMachine
                        <span></span>
                    </label>
                    <label class="kt-checkbox kt-checkbox--bold kt-checkbox--brand">
                        @Html.CheckBoxFor(model => model.IsProcessingCheck3) @Cpanel.UsingWaterHeaters
                        <span></span>
                    </label>
                </div>
            </div>
        </div>


    </div>
    <div class="kt-portlet__foot">
        <div class="kt-form__actions">
            <div class="row">
                <div class="col-lg-6">
                    <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                </div>
                @*<div class="col-lg-6 kt-align-right">
                        <button type="reset" class="btn btn-danger">Delete</button>
                    </div>*@
            </div>
        </div>
    </div>

}
