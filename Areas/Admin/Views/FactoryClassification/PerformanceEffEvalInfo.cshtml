@model Amana.ViewModels.Classifications.Cls_PerformanceEffEvalInfoViewModel
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    Amana.Models.Entities.Cls_FactoryClassifications classificationItem = (Amana.Models.Entities.Cls_FactoryClassifications)ViewBag.ClassificationItem;

}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Classification
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">  @Cpanel.FactoryDataEntry</span>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
              @Cpanel.OperatingEfficiency
            </span>

        </div>
    </div>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding:0px;">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        @if (classificationItem != null)
        {

            <div class="col-md-4">
                @Html.Partial("_ClassificationItem", classificationItem);
            </div>

        }

        <div class="col-md-8">

            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    @Cpanel.OperatingEfficiency

                                </h3>
                            </div>
                        </div>


                        <!--begin::Form-->
                        <div class="kt-portlet__body">
                            @if (ViewBag.Success == true)
                            {
                                @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                            }


                            @using (Html.BeginForm("PerformanceEffEvalInfo", "FactoryClassification", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.ClassificationId)

                                <div class="kt-portlet__body">
                                    <div class="kt-section kt-section--first">
                                        <h3 class="kt-section__title">
                                            @Cpanel.EvaluationEfficiency
                                            :
                                        </h3>
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">
                                               @Cpanel.TemperatureRise
                                                :
                                            </label>
                                            <div class="col-9">
                                                @Html.TextAreaFor(model => model.TempQualtyMaxComment, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TempQualtyMaxComment)
                                            </div>



                                        </div>
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">
                                                @Cpanel.TemperatureDrop
                                                :
                                            </label>
                                            <div class="col-9">
                                                @Html.TextAreaFor(model => model.TempQualtyMinComment1, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TempQualtyMinComment1)
                                            </div>
                                        </div>
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">
                                                @Cpanel.Generally
                                                :
                                            </label>
                                            <div class="col-9">
                                                @Html.TextBoxFor(model => model.TempGeneralComment, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TempGeneralComment)
                                            </div>
                                        </div>
                                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                        <h3 class="kt-section__title">
                                           @Cpanel.EvaluationResistance
                                            :
                                        </h3>
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">
                                                @Cpanel.Slump
                                                :
                                            </label>
                                            <div class="col-9">
                                                @Html.TextAreaFor(model => model.Slump, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Slump)
                                            </div>
                                        </div>
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">
                                               @Cpanel.PressureResistance
                                                :
                                            </label>
                                            <div class="col-9">
                                                @Html.TextAreaFor(model => model.CompressiveStrength, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CompressiveStrength)
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="kt-portlet__foot">
                                    <div class="kt-form__actions">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                                            </div>
                                            @*<div class="col-lg-6 kt-align-right">
                                                    <button type="reset" class="btn btn-danger">Delete</button>
                                                </div>*@
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>


                        <!--end::Form-->
                    </div>


                </div>
            </div>
        </div>


    </div>

    <!--End::App-->
</div>
@section sectionScripts{
    <script>
        $(document).ready(function () {
            $("#lnkPerformanceEffEvalInfo").addClass("kt-widget__item--active");
        });

    </script>
}





