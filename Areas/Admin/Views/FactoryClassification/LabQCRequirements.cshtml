@model Amana.ViewModels.Classifications.QCTestOfConcreteViewModel
@using Amana.Models.Helpers;
@using Amana.GlobalResources;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
    Amana.Models.Entities.Cls_FactoryClassifications classificationItem = (Amana.Models.Entities.Cls_FactoryClassifications)ViewBag.ClassificationItem;

    Amana.ViewModels.Classifications.QCConcreteTestingViewModel qCConcreteTestingViewModel = ViewBag.QCConcreteTestingVm;
    Amana.ViewModels.Classifications.QCLaboratoryRecordsViewModel qCLaboratoryRecordsVm = ViewBag.QCLaboratoryRecordsVm;
}
@section sectionSubHeader{

    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @Cpanel.Classification
        </h3>
        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">  @Cpanel.FactoryDataEntry</span>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
              @Cpanel.LabQualityActivities
            </span>

        </div>
    </div>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding:0px;">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        @if (classificationItem != null)
        {

            <div class="col-md-4">
                @Html.Partial("_ClassificationItem", classificationItem);
            </div>

        }

        <div class="col-md-8">

            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    @Cpanel.LabQualityActivities

                                </h3>
                            </div>
                        </div>


                        <!--begin::Form-->
                        <div class="kt-portlet__body">
                            @if (ViewBag.Success == true)
                            {
                                @Html.Partial("~/Areas/Admin/Views/Shared/UcSuccess.cshtml")
                            }
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a id="kt_link_1" class="nav-link active" data-toggle="tab" href="#" data-target="#kt_tabs_1">1. @Cpanel.ConcreteMaterialTesting</a>
                                </li>

                                <li class="nav-item">
                                    <a id="kt_link_2" class="nav-link" data-toggle="tab" href="#kt_tabs_2">2. @Cpanel.ConcreteTest</a>
                                </li>
                                <li class="nav-item">
                                    <a id="kt_link_3" class="nav-link" data-toggle="tab" href="#kt_tabs_3">3. @Cpanel.LaboratoryRecords</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="kt_tabs_1" role="tabpanel">
                                    @using (Html.BeginForm("LabQCTestOfConcreteForm", "FactoryClassification", FormMethod.Post, new { enctype = "multipart/form-data", @class = "kt-form kt-form--label-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        @Html.HiddenFor(model => model.ClassificationId)

                                        <div class="kt-portlet__body">
                                            <div class="kt-section kt-section--first">

                                                <h3 class="kt-section__title">
                                                    A. Aggregate
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListLabProp24)
                                                    {
                                                        Html.RenderPartial("_ClsLabProperty", item);
                                                    }

                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <h3 class="kt-section__title">
                                                    B. Mixing Water
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListLabProp25)
                                                    {
                                                        Html.RenderPartial("_ClsLabProperty", item);
                                                    }

                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <h3 class="kt-section__title">
                                                    C. Cement
                                                    :
                                                </h3>
                                                <div class="kt-checkbox-list">
                                                    @*@foreach (var item in Model.ListProp26)
                                                        {
                                                            Html.RenderPartial("_ClsProperty", item);
                                                        }*@
                                                    <div class="kt-checkbox-list">
                                                        @foreach (var item in Model.ListLabProp26)
                                                        {
                                                            Html.RenderPartial("_ClsLabProperty", item);
                                                        }

                                                    </div>
                                                </div>
                                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>
                                                <h3 class="kt-section__title">
                                                    D. Admixture
                                                    :
                                                </h3>
                                                @*<div class="form-group row kt-padding-t-20">
                                                        <div class="col-lg-12">

                                                            <div class="kt-checkbox-inline">
                                                                <label class="kt-checkbox kt-checkbox--brand">
                                                                    @Html.CheckBoxFor(model => model.IsTechniqcalSheet) Technical Sheet On File
                                                                    <span></span>
                                                                </label>

                                                            </div>
                                                            @Html.ValidationMessageFor(model => model.IsTechniqcalSheet)
                                                        </div>

                                                    </div>*@

                                                <div class="kt-checkbox-list">
                                                    @foreach (var item in Model.ListLabProp34)
                                                    {
                                                        Html.RenderPartial("_ClsLabProperty", item);
                                                    }

                                                </div>
                                                @*<div class="form-group row">
                                                        <div class="col-lg-12">
                                                            <label>
                                                                Trial Mixes for evaluating the effect admixture on slump,slump loss setting time strength
                                                                :
                                                            </label>
                                                            @Html.EditorFor(model => model.TrialMixesEvalutePeriodicId, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.TrialMixesEvalutePeriodicId)
                                                        </div>
                                                    </div>*@
                                            </div>




                                        </div>
                                        <div class="kt-portlet__foot">
                                            <div class="kt-form__actions">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <input type="submit" value="@Amana.GlobalResources.Cpanel.Save" class="btn btn-warning" />

                                                    </div>
                                                    @*<div class="col-lg-6 kt-align-right">
                                                            <button type="reset" class="btn btn-danger">Delete</button>
                                                        </div>*@
                                                </div>
                                            </div>
                                        </div>

                                    }


                                </div>
                                <div class="tab-pane" id="kt_tabs_2" role="tabpanel">
                                    @Html.Partial("_QCConcreteTestingForm", qCConcreteTestingViewModel)
                                </div>
                                <div class="tab-pane" id="kt_tabs_3" role="tabpanel">
                                    @Html.Partial("_QCLaboratoryRecordsForm", qCLaboratoryRecordsVm)
                                </div>
                            </div>
                        </div>


                        <!--end::Form-->
                    </div>


                </div>
            </div>
        </div>


    </div>

    <!--End::App-->
</div>
@section sectionScripts{
    <script>
        $(document).ready(function () {
            $("#lnkLabQCRequirements").addClass("kt-widget__item--active");
        });

    </script>
}





