@using Amana.GlobalResources;
@{
    Layout = null;
    var latitudeVal = Request["latitude"];
    var longitudeVal = Request["longitude"];
}
<!DOCTYPE html>
<html>
<head>
    <title>@Cpanel.LocationOnMap</title>

  
</head>
<body>

    <div id="map_canvas" style="width: 100%; height: 300px;"></div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBMMpfFDCKmx8ZwhotaWBjRN6GJBFefD_4&sensor=false"></script>
    <script type="text/javascript">
                $(function () {
                    initialize();
                });
                var marker;
                var markersArray = [];
                function initialize() {
                    var longitude = parseFloat(@longitudeVal);
                    var latitude = parseFloat(@latitudeVal);
                    var myLatlng;
                    if (latitude)
                        myLatlng = new google.maps.LatLng(latitude, longitude);
                    else
                        myLatlng = new google.maps.LatLng(22.43134015636061, 46.845703125);
                    var mapOptions;
                    var url = window.location.href;
                    mapOptions = {
                        center: myLatlng,
                        zoom: 8,
                        mapTypeId: google.maps.MapTypeId.ROADMAP
                    };
                    var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

                    marker = new google.maps.Marker({
                        position: myLatlng,
                        map: map
                    });
                    markersArray.push(marker);

                    google.maps.event.addListener(map, 'click', function (event) {
                        //alert(event.latLng);
                        document.getElementById("txtLongitude").value = event.latLng.lng();
                        document.getElementById("txtLatitude").value = event.latLng.lat();
                        if (markersArray) {
                            for (i in markersArray) {
                                markersArray[i].setMap(null);
                            }
                        }
                        marker = new google.maps.Marker({
                            position: event.latLng,
                            map: map
                        });
                        markersArray.push(marker);
                    });
                }
    </script>

</body>
</html>


